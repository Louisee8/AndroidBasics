<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/backgroudDay"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titleTV"
            style="@style/titleTVStyleDay"
            tools:text="Title" />

        <TextView
            android:id="@+id/dataTV"
            style="@style/dateTVStyleDay"
            android:layout_width="wrap_content"
            android:layout_below="@+id/titleTV"
            tools:text="Data" />

        <TextView
            android:id="@+id/timeTV"
            style="@style/dateTVStyleDay"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dataTV"
            tools:text="Time" />

        <TextView
            android:id="@+id/typeTV"
            style="@style/typeTVStyle"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/titleTV"
            tools:text="Type" />

        <TextView
            android:id="@+id/sectionNameTV"
            style="@style/sectionTVStyle"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/typeTV"
            android:textAlignment="viewEnd"
            tools:text="sectionName" />

    </RelativeLayout>

    <Space
        style="@style/spaceBarDay"
        android:background="@android:color/background_dark"
        android:visibility="visible" />
</LinearLayout>